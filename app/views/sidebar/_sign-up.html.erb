<section id="sign-up">
  <header>
    <h1>Sign Up!</h1>
  </header>
  <%= semantic_form_for User.new do |f| %>
    <%= f.inputs do %>
      <%= f.input :full_name, label: "Full name" %>
      <%= f.input :email, label: "Email" %>
      <%= f.input :username, label: "Username" %>
      <%= f.input :password, label: "Password" %>
      <%= f.input :password_confirmation, label: "Password Confirmation" %>
    <% end %>
    <%= f.actions do %>
      <% f.action :submit, label: "Submit" %>
    <% end %>
  <% end %>
</section>

<section id="login">
  <header>
    <h1>Login:</h1>
  </header>
  <%= form_for(:session, url: sessions_path) do |f| %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
    </p>
  <%= f.submit "Login" %>
<% end %>
</section>
